<view class="container">
  <view class="f" style="{{isShow}}">

    <view class="search-bar">
      <button class="newvote-btn" bind:tap="newVote">+</button>
      <view class="line"></view>
      <input class="search-input" placeholder=" 请输入搜索关键词" value="{{keyword}}" bindinput="onKeywordSearch"></input>
      <button class="search-button" bind:tap="searchVote">🔍</button>
    </view>

    <view class="votes">
      <view class="vote" bind:tap="voteDetail" wx:key="id" wx:for="{{voteList}}" data-id="{{item.id}}" data-idx="{{index}}">
        <view class="info">
          <!--标题-->
          <text>{{item.title}}</text>
          <!--状态-->
          <view class="info-2">
            <text wx:if="{{item.status === 0}}" style="color: rgb(100,149,237);">●</text>
            <text wx:if="{{item.status === 0}}" style="color: rgb(100,149,237);">未发布</text>
            <text wx:if="{{item.status === 1}}" style="color: rgb(81, 218, 111);">✔</text>
            <text wx:if="{{item.status === 1}}" style="color: rgb(81, 218, 111);">已发布</text>
          </view>
        </view>
        <!--分割线-->
        <view class="voteLine"></view>
        <!--投票人数-->
        <view class="ansNum">
          <text class="number">{{item.participants}}</text>
          <text>投票人数</text>
        </view>
      </view>
    </view>

    <view class="on-bottom">
      <text wx:if="{{voteList.length > 0}}">已经到底了 ~</text>
      <text wx:if="{{voteList.length <= 0}}">还没有投票 ~</text>
    </view>

  </view>
</view>