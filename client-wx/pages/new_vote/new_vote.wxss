page {
  background-color: #292929;
}

.container {
  background-size: cover;
  position: relative;
}

.f image {
  z-index: 10;
}

.f-vote {
  color: #FFD700;
  font-size: 24px;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
  display: flex;
  justify-content: center;
  margin-top: -75px;
  margin-bottom: 25px;
}

.my-radio {
  transform: scale(0.6);
}

.mutliChoice {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 3px;
}

.mutliChoice text {
  color: rgba(217, 203, 145, 1);
  font-size: 13px;
  font-style: italic;
}

.mutliChoice image {
  margin-top: 2px;
  width: 19px;
  height: 19px;
  margin-left: 3px;
}

.v-title {
  display: flex;
  justify-content: center;
}

.v-title text {
  color: #FFD700;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
  font-size: 16px;
}

.v-title input {
  background-color: aliceblue;
  margin-bottom: 20px;
  width: 230px;
  height: 26px;
  background-color: rgba(51, 51, 51, 0.2);
  backdrop-filter: blur(2px);
  border-radius: 10rpx;
  border: 1px solid rgba(217, 203, 145, 0.8);
  color: #fff;
}

.v-title image {
  margin-top: 2px;
  width: 19px;
  height: 19px;
  margin-left: 3px;
}

.options {
  display: flex;
  justify-content: center;
}

.options text {
  color: #FFD700;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
  font-size: 16px;
}

.options input {
  background-color: aliceblue;
  margin-bottom: 14px;
  width: 230px;
  height: 26px;
  background-color: rgba(51, 51, 51, 0.2);
  backdrop-filter: blur(2px);
  border-radius: 10rpx;
  border: 1px solid rgba(217, 203, 145, 0.8);
  color: #fff;
}

.options image {
  margin-top: 2px;
  width: 19px;
  height: 19px;
  margin-left: 3px;
}

.a button {
  width: 130px;
  margin-top: 10px;
}

.a button:active {
  opacity: 0.85;
}

.a button:nth-child(1) {
  margin-right: 47px;
}

.addOptionBtn {
  background-color: rgba(51, 51, 51, 0.2);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(217, 203, 145, 0.9);
  color: wheat;
  font-size: 16px;
  font-weight: 700;
}

.newOptionBtn {
  background-color: rgba(51, 51, 51, 0.2);
  backdrop-filter: blur(2px);
  border: 1px solid rgba(217, 203, 145, 0.9);
  color: wheat;
  font-size: 16px;
  font-weight: 700;
}