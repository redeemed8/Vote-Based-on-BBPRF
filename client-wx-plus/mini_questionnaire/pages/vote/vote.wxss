page {
  background-color: #adf7c2;
}

.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 36px;
  background-color: #adf7c2;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}


.line {
  width: 2px;
  height: 25px;
  background-color: rgba(120, 129, 122, 1);
  margin-right: 5.5px;
}

.search-input {
  height: 28px;
  width: 75%;
  margin-top: 2px;
  margin-bottom: 3px;
  border: 1.5px solid rgba(120, 129, 122, 0.9);
  border-radius: 17rpx;
  font-size: 13px;
  background-color: white;
  padding-left: 2%;
  padding-right: 2%;
}

.newvote-btn {
  border: 2px solid rgba(120, 129, 122, 1);
  background-color: rgba(255, 255, 255, 0);
  color: rgba(120, 129, 122, 1);
  font-weight: 1000;
  font-size: 20px;
  display: flex;
  align-items: center;
}

.search-button {
  border: 2px solid rgba(120, 129, 122, 1);
  background-color: rgba(255, 255, 255, 0);
  color: rgba(120, 129, 122, 1);
  font-size: 19px;
  display: flex;
  align-items: center;
}

.search-bar button {
  width: 15%;
  padding: 0;
  height: 80%;
  display: flex;
  justify-content: center;
  line-height: 10px;
  margin-top: 2px;
  margin-bottom: 3px;
  margin-left: 5px;
  margin-right: 6px;
}

.votes {
  z-index: 1;
  position: relative;
  margin-top: 15%;
  display: flex;
  flex-wrap: wrap;
}

.vote {
  background-color: rgba(255, 255, 255, 1);
  aspect-ratio: 197 / 239;
  width: 43%;
  margin-left: 4.7%;
  margin-bottom: 30rpx;
  border-radius: 17rpx;
  box-shadow: 0 4.5px 7px rgba(0, 0, 0, 0.2);
}

.on-bottom {
  margin-top: 15px;
  padding-bottom: 15px;
}

.on-bottom text {
  color: rgba(0, 0, 0, 0.75);
  display: flex;
  justify-content: center;
  font-size: 14px;
  font-weight: 600;
}

.status-f {
  width: 100%;
  padding-top: 5%;
  padding-bottom: 3%;
  padding-left: 5%;
  padding-right: 5%;
  height: 10%;
}

.status {
  display: flex;
  height: 100%;
  align-items: center;
}

.status image {
  height: 90%;
}

.not-publish {
  font-size: 12.5px;
  color: #908b8b;
  font-weight: 550;
  margin-right: 3px;
}

.a1 {
  font-size: 12.5px;
  width: 53%;
  text-align: right;
  margin-top: -5%;
  font-weight: 1000;
  color: #4ec466;
}

.a2 {
  font-size: 12.5px;
  margin-left: 3%;
  font-weight: 1000;
  color: #4ec466;
}

.published {
  font-size: 12.5px;
  color: #4ec466;
  font-weight: 550;
  margin-right: 3px;
}

.photo-f {
  width: 100%;
  height: 47%;
  display: flex;
  justify-content: center;
}

.photo {
  height: 100%;
  aspect-ratio: 1;
  padding-top: 3%;
  padding-bottom: 2%;
}

.photo image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 25%;
}

.title {
  padding-top: 8%;
  padding-left: 27%;
  padding-right: 25%;
  display: flex;
  justify-content: center;
  font-size: 12px;
  font-weight: 550;
  height: 17%;
}

.tail {
  display: flex;
  padding: 1.5%;
  align-items: center;
  width: 100%;
}

.tail-2 {
  width: 100%;
  font-size: 10px;
  color: #908b8b;
  display: flex;
  justify-content: flex-end;
  margin-right: 8%;
}

.newV {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.newV:active {
  background-color: rgb(245, 245, 245);
}

.newV-i {
  height: 40%;
}

.newV-t {
  color: #4ec466;
  margin-top: 8px;
  font-weight: 1000;

}