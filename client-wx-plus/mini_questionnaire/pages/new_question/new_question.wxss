page {
  background-color: #292929;
}

.container {
  background-size: 100% 102%;
  height: 100vh;
}

.f text:nth-child(1) {
  color: #FFD700;
  font-size: 24px;
  font-family: "Times New Roman", Times, serif;
  font-style: italic;
  display: flex;
  justify-content: center;
  margin-top: 50px;
  margin-bottom: 50px;
}

.f text:nth-child(3) {
  color: rgba(217, 203, 145, 0.9);
  font-size: 13px;
  margin-left: 10px;
}

.f textarea {
  padding-left: 10px;
  padding-right: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  width: 305px;
  height: 105px;
  margin-top: 25px;
  background-color: rgba(51, 51, 51, 0.2);
  backdrop-filter: blur(2px);
  border-radius: 17rpx;
  border: 1px solid rgba(217, 203, 145, 0.9);
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 1px;
}

.f button {
  margin-top: 55px;
  width: 170px;
  background-color: rgba(0, 0, 0, 0);
  color: rgba(245, 219, 71, 0.9);
  backdrop-filter: blur(2px);
  font-weight: 700;
  border-radius: 17rpx;
  border: 1px solid rgba(252, 225, 77, 0.9);
}

.f button:active {
  opacity: 0.8;
}