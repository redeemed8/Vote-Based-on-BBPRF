page {
  background: #adf7c2;
}

.notLogin text {
  color: #000000;
  display: flex;
  justify-content: center;
  margin-top: 120px;
  font-size: 20px;
  margin-bottom: 40px;
}

.notLogin button {
  width: 200px;
  background-color: rgba(255, 255, 255, 1);
  border: 1px solid gray;
  border-radius: 5px;
  color: black;
}

.f1 {
  width: 100%;
  padding: 5%;
  padding-top: 8%;
}

.f2 {
  background-color: white;
  width: 90%;
  margin-left: -5px;
  border-radius: 20px;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 5px;
  padding-right: 5px;
  box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);
}

.header {
  width: 100%;
  height: 90px;
  display: flex;
  align-items: center;
  margin-top: 5px;
  margin-bottom: 30px;
}

.header-photo {
  height: 100%;
  width: 39.5%;
  display: flex;
  align-items: center;
  margin-left: 6px;
}

.header image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 15%;
}

.header-info-f {
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.imc {
  width: 90%;
  display: flex;
  justify-content: flex-end;
  font-size: 11px;
  height: 16px;
  align-items: center;
}

.my-radio {
  transform: scale(1);
  -webkit-transform: scale(0.45);
}

.title {
  font-size: 17px;
  font-weight: 900;
  padding-right: 10%;
  padding-left: 10%;
  height: auto;
  padding-top: 2%;
  margin-bottom: 5px;
}

.status-f {
  display: flex;
  height: 10px;
  align-items: center;
}

.status-t {
  font-size: 11.5px;
  padding-right: 3%;
  padding-left: 10%;
}

.option-f {
  width: 100%;
  height: 50px;
  margin-bottom: 15px;
  margin-left: 2.5%;
}

.option-bg {
  background-color: #d4d5d2;
  width: 95%;
  height: 100%;
  display: flex;
  align-items: center;
  border-radius: 15px;
}

.option-l {
  font-size: 16px;
  padding-top: 1.5px;
  font-weight: 800;
  margin-left: 8%;
}

.option-name {
  font-size: 16px;
  font-weight: 800;
}

.voteBtn {
  margin-top: 45px;
  padding-bottom: 45px;
}

.voteBtn button {
  color: #ffffff;
  background-color: #4ec466;
  border-radius: 10px;
  box-shadow: 0 3px 5px rgba(0, 0, 0, 0.2);
}